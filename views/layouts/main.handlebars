    <title>My Tech Blog</title>
  </head>
  <header>
    <nav class="navbar navbar-light bg-light justify-content-between">
      <a class="navbar-brand">MVC Blog</a>
      {{#if login}}
        <div>
          <a href="/"><button
              class="btn btn-outline-success my-sm-0"
              type="submit"
            >Blogs</button></a>
          <a href="/post"><button
              class="btn btn-outline-success my-2 my-sm-0"
